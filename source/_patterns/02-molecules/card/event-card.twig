
<div class="event-card clearfix">
  <div class="event-card__image">
    {% include "atoms-calendar-icon" with {"year": event.year, "month": event.month, "day": event.day, "dayofweek": event.dayofweek ,"hour": event.hour, "minute": event.minute} %}
  </div>
  <div class="event-card__detail">
    <h3 class="font-helvetica-neue-light"><a href='{{ event.url }}'>{{ event.title }}</a></h3>
  </div>
  <div class="event-card__date-time">
    <p><strong>Date:</strong> {{ event.month.long }} {{ event.day.long }}, {{ event.year.long }}</p>
      {% if(event.hour) %}
    <p><strong>Time:</strong> {{ event.hour.short }}:{{ event.minute.long }}{{ event.hour.ampm }}</p>
      {% endif %}
  </div>
</div>
