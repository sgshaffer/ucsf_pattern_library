
<div class="event-card clearfix">
  <div class="event-card__image">
    {% include "atoms-calendar-icon" %}
  </div>
  <div class="event-card__detail">
    <h3 class="font-helvetica-neue-light"><a href=#>{{ text.eventTeaser.title }}</a></h3>
  </div>
  <div class="event-card__date-time">
    <p><strong>Date:</strong> {{ month.long }} {{ day.long }}, {{ year.long }}</p>
    <p><strong>Time:</strong> {{ hour.short }}:{{ minute.long }}{{ hour.ampm }}</p>
  </div>
</div>
