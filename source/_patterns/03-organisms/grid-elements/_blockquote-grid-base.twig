{% extends "twocol.twig" %}
{% block title %}{{ titles.h2(title) }}{% endblock %}
{% block colclass %}{{ grid_class }}{% endblock %}
{% block left %}
    {% if show_bq == 'left' %}
        {% include "atoms-blockquote" with {"color_class" : color_class} only %}
    {% else %}
        {{ left }}
    {% endif %}
{% endblock %}

{% block right %}
    {% if show_bq == 'right' %}
        {% include "atoms-blockquote" with {"color_class" : color_class} only %}
    {% else %}
        {{ right }}
    {% endif %}
{% endblock %}
