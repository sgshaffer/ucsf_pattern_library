<div id="footer" class="footer-menu">
    <div class="content-container">
        {% set right %}
            <div class="footer-menu__contact-and-links">
                <h5 class="footer-menu__address-header">Contact Us</h5>
                <div class="footer-menu__social-media-links">
                    <a href="#"><i class="fa fa-facebook facebook-link" aria-hidden="true" title="facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter twitter-link" aria-hidden="true" title="twitter"></i></a>
                    <a href="#"><i class="fa fa-youtube-play youtube-link" aria-hidden="true" title= "youtube"></i></a>
                </div>

            </div>
            <p>2330 Post St #420, San Franciso,<br />
                California 94115, United States <br />
                Phone: (123) 456-7890 <br />
                Fax: (123) 456-7890
            </p>
        {% endset %}
        {% if img.footer_logo %}
            {% set left %}
                <div class="footer-logo">{{ html.img(img.footer_logo) }}</div>
            {% endset %}
            {% set center %}
                {% include "molecules-footer-menu" %}
            {% endset %}
            {%  set threecol = {'grid_class': 'three-col--30-40-30', 'left': left, 'center': center, 'right': right, 'leftclass': '', 'centerclass': 'footer-menu__links-wrapper', 'rightclass': 'footer-menu__address'} %}
            {%  include "base-three-column-base" with threecol only %}
        {% else %}
            {% set left %}
                {% include "molecules-footer-menu" %}
            {% endset %}
            {%  set twocol = {'grid_class': 'two-col--70-30', 'left': left, 'right': right, 'leftclass': 'footer-menu__links-wrapper', 'rightclass': 'footer-menu__address'} %}
            {%  include "base-two-column-base" with twocol only %}
        {% endif %}

        <div class="footer-menu__copyright">
            &#x00A9; 2015 The Regents of the University of California
        </div>
    </div>
</div>
