<div class="header">
  <div class="header__ucsf-main-menu">
      <div class="content-container">
          <span class="header__ucsf-main-menu__university">University of California San Francisco</span>
          <span class="header__ucsf-main-menu__links">
      <a href="#" title="About UCSF">About UCSF</a>
      <a href="#" title="Search UCSF">Search UCSF</a>
      <a href="#" title="UCSF Medical Center">UCSF Medical Center</a>
    </span>
      </div>
  </div>
  <div class="header__section">
      <div class="content-container clearfix">
          <div id="mobile-menu-toggle"><span class="fa fa-bars fa-lg"></span></div>
          <div class ="header__logo">
              {% include "atoms-logo" %}
          </div>
          <div class="header__social-media-search">
              {% if header.social %}
                  <div class="header__social-media-links">
                      <a href="#" class="fa fa-facebook facebook-link">Facebook</a>
                      <a href="#" class="fa fa-twitter twitter-link">Twitter</a>
                      <a href="#" class="fa fa-youtube youtube-link">Youtube</a>
                  </div>
              {% endif %}
              {% if header.search %}
                  <div class="header__search">
                      {% include "molecules-search" %}
                  </div>
              {% endif %}
          </div>
          <div class="header__header-menu">
              {% include "molecules-header-menu" %}
          </div>
      </div>
  </div>
</div>
